<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lh.mapper.PostMapper">
    <resultMap id="findAllPostResult" type="com.lh.pojo.Post">
        <id property="id" column="id"></id>
        <result property="title" column="title"></result>
        <result property="content" column="content"></result>
        <result property="image_path" column="image_path"></result>
        <result property="create_date" column="create_date"></result>
        <association property="user_id" javaType="com.lh.pojo.User">
            <id property="id" column="user_id"></id>
            <result property="username" column="username"></result>
            <result property="password" column="password"></result>
            <result property="email" column="email"></result>
            <result property="role" column="role"></result>
            <result property="address" column="address"></result>
        </association>
    </resultMap>
    <insert id="insertPost" parameterType="com.lh.pojo.Post">
        insert into t_post(user_id,title,content,create_date)
        values(#{id},#{title},#{content},#{create_date})
    </insert>
    <select id="findAllPost" resultMap="findAllPostResult">
        select *
        from t_post p,t_user u
        where p.user_id=u.id
    </select>
    <select id="findPostByID"  parameterType="Integer" resultMap="findAllPostResult">
        select *
        from t_post p,t_user u
        where p.id = #{id} and p.user_id=u.id
    </select>
    <update id="updatePost" parameterType="com.lh.pojo.Post">
        update t_post
        set
            title = #{title},
            content = #{content},
            create_date = #{create_date},
            image_path = #{image_path}
        where
            id = #{id}
    </update>
    <delete id="deletePostByID" parameterType="integer">
        delete
        from t_post
        where id=#{id}
    </delete>
    <select id="findPostByStr" parameterType="java.lang.String" resultMap="findAllPostResult">
        select *
        from t_post p,t_user u
        where p.user_id=u.id
        <if test="searchStr!=null and searchStr!=''">
            and (title like CONCAT('%',#{searchParam},'%')
            or content like CONCAT('%',#{searchParam},'%'))
        </if>
    </select>
</mapper>